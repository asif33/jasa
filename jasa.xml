<?eclipse.ant.import?>
	
<project basedir="." name="jasa-user">

	<property name="version" value="1.2"/>

	<target name="jar">
		<jar destfile="dist/jasa-${version}.jar"
			 basedir="bin/">
		</jar>
	</target>
	
	<target name="doc">
		<javadoc classpathref="jasa.classpath" author="true" sourcepath="src/"
			 destdir="doc/api/"
			docletpath="/usr/local/java/yworks-uml-doclet-3.0_02-jdk1.5/resources;/usr/local/java/yworks-uml-doclet-3.0_02-jdk1.5/lib/ydoc.jar"
			additionalparam="-umlautogen"
			doclet="ydoc.doclets.YStandard"
			>
		</javadoc>
	</target>
	
	<target name="dist" depends="jar,doc">
		<zip  destfile="../jasa-${version}.zip"
			  basedir="../"
			  includes="jasa/**"
			  excludes="jasa/data/**/*"
			  >
		</zip>
	</target>
	

	
</project>