		</property>
		
		<property name="modelDescription" value="Iori and Chiarella - A Simulation analysis of a the microstructure of double auction markets"/>
		
	</bean>

	<bean id="fileNamePrefix" class="net.sourceforge.jabm.util.MutableStringWrapper"
		scope="singleton">
		<constructor-arg value="data/" />
	</bean>

</beans>