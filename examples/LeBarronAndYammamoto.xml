<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


<bean id="market" class="net.sourceforge.jasa.market.MarketFacade">
	<property name="auctioneer" ref="cda"/>
	<property name="controller" ref="simulationController"/>
	<property name="marketSimulation" ref="marketSimulation"/>
</bean>

<bean id="simulationController" class="net.sourceforge.jasa.sim.SimulationController">
	<constructor-arg ref="population"/>
	<property name="agentMixer" ref="agentMixer"/>
	<property name="agentInitialiser" ref="agentInitialiser"/>
	<property name="simulation" ref="marketSimulation"/>
	<property name="numSimulations" value="100"/>
	<property name="reports">
		<list>
			<bean class="net.sourceforge.jasa.sim.report.BatchMetaReport">
				<constructor-arg>
					<list>
						<ref bean="transactionPriceTimeSeriesReport"/>
					</list>
				</constructor-arg>
			</bean>
		</list>
	</property>
</bean>

<bean id="transactionPriceTimeSeriesReport" 
    class="net.sourceforge.jasa.report.TransactionPriceTimeSeriesReport">
    <constructor-arg value="transprice.csv"/>
</bean>

<bean id="equilibriumReport" class="net.sourceforge.jasa.report.EquilibriumReport">
	<constructor-arg ref="market" />
</bean>

<bean id="agentInitialiser" class="net.sourceforge.jasa.agent.MarketAgentInitialiser">
    <property name="market" ref="market"/>
</bean>

<bean id="agentMixer" class="net.sourceforge.jasa.sim.RandomRobinAgentMixer">
	<constructor-arg ref="prng"/>
</bean>

<bean id="marketSimulation" class="net.sourceforge.jasa.market.MarketSimulation">
	<constructor-arg ref="simulationController"/>
	<property name="market" ref="market"/>
	<property name="maximumRounds" value="100"/>
</bean>

<bean id="cda" 
        class="net.sourceforge.jasa.market.auctioneer.ContinuousDoubleAuctioneer">
	<constructor-arg>
		<ref bean="market"/>
	</constructor-arg>
	<property name="pricingPolicy" ref="timePriorityPricing"/>
</bean>

<bean id="midPointDiscriminatoryPricingPolicy" 
		class="net.sourceforge.jasa.market.rules.DiscriminatoryPricingPolicy">
	<property name="k" value="0.5"/>
</bean>

<bean id="timePriorityPricing" 
        class="net.sourceforge.jasa.market.rules.TimePriorityPricingPolicy">
</bean>

<bean id="prng" class="cern.jet.random.engine.MersenneTwister64">
	<constructor-arg>
		<bean class="java.util.Date"/>
	</constructor-arg>
</bean>

<bean id="population" class="net.sourceforge.jasa.sim.Population">
	<property name="agentList">
		<bean class="net.sourceforge.jasa.sim.AgentList">
			<constructor-arg>
				<list>
					<ref bean="noiseTraders"/>
				</list>
			</constructor-arg>
		</bean>
	</property>
	<property name="prng" ref="prng"/>
</bean>

<bean id="noiseTraders" class="net.sourceforge.jasa.sim.AgentList">
	<constructor-arg value="100"/>
	<constructor-arg ref="noiseTraderFactory"/> 	
</bean>

<bean id="noiseTraderFactory"
	class="org.springframework.beans.factory.config.ObjectFactoryCreatingFactoryBean">
	<property name="targetBeanName">
		<idref local="noiseTraderPrototype" />
	</property>
</bean>

<bean id="noiseTraderPrototype" scope="prototype" 
        class="net.sourceforge.jasa.agent.SimpleTradingAgent">
	<property name="strategy" ref="noiseTraderStrategy"/>
</bean>

<bean id="noiseTraderStrategy" scope="prototype" 
        class="net.sourceforge.jasa.agent.strategy.ReturnForecastStrategy">
    <property name="forecaster" ref="noiseTraderForecaster"/>
</bean>

<bean id="noiseTraderForecaster" scope="prototype"
        class="net.sourceforge.jasa.agent.strategy.NoiseTraderForecaster">
    <constructor-arg>
        <ref bean="prng"/>
    </constructor-arg>
</bean>

<bean id="markupDistribution" class="cern.jet.random.Uniform">
	<constructor-arg index="0" value="0.0" />
	<constructor-arg index="1" value="10.0" />
	<constructor-arg index="2" ref="prng" />
</bean>

<bean id="randomValuationPolicy" class="net.sourceforge.jasa.agent.valuation.RandomValuer">
	<constructor-arg value="10"/>
	<constructor-arg value="100"/>
	<constructor-arg ref="prng"/>
</bean>

</beans>